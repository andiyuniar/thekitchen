@inherits ReviewListBase

@if (@Reviews == null)
{
    <div class="spinner"></div>
}
else
{
    @foreach (var review in Reviews)
    {
        <div class="row mb-1">
            <div class="col-md-12 ">
                <b>@review.Name (@review.Email)</b>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-12 ">
                <p>@review.Description</p>
            </div>
        </div>
    }
}
